<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="edu.ucsb.cs.cs185.a_hoang.colormexml.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="0"
        android:background="@color/red"
        android:id="@+id/mainLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/red_label"
                android:id="@+id/button"
                android:layout_weight="1"
                android:background="@color/red"
                android:onClick="redClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/green_label"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:background="@color/green"
                android:onClick="greenClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blue_label"
                android:id="@+id/button3"
                android:layout_weight="1"
                android:background="@color/blue"
                android:onClick="blueClick"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
